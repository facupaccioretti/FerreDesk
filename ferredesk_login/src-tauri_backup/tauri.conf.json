{
  "$schema": "https://schema.tauri.app/v2/config.json",
  "package": {
    "productName": "FerreDesk",
    "version": "0.1.0"
  },
  "build": {
    "beforeBuildCommand": "cd ../frontend && npm run build",
    "distDir": "../frontend/dist"
  },
  "tauri": {
    "windows": [
      {
        "title": "FerreDesk",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": ["msi", "nsis"],
      "identifier": "com.ferredesk.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}